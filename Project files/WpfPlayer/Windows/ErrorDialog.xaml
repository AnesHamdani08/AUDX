<Window x:Class="ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPlayer"
        mc:Ignorable="d"
        Title="Error Dialog" Height="320" Width="700" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="70,70,0,0" VerticalAlignment="Top" Width="100" Source="/WpfPlayer;component/Res/cross-flat.png"/>
        <Label x:Name="label" Content="Error" HorizontalAlignment="Left" Margin="214,70,0,0" VerticalAlignment="Top" FontSize="32" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <ScrollViewer>
            <TextBox x:Name="error_msg" HorizontalAlignment="Left" Margin="214,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="476" IsEnabled="False"/>
        </ScrollViewer>
        <Button x:Name="exit_btn" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="652,280,0,0"/>
    </Grid>
</Window>
